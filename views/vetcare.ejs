            <div class="popup-close" id="popup-close">&times;</div>
            <div class="popup-content" id="popup-content">
                <!-- Content will be dynamically inserted here -->
            </div>
        </div>
    </div>

    <script >
document.addEventListener('DOMContentLoaded', function() {
    // Navigation active state
    const navLinks = document.querySelectorAll('nav ul li a');
    const sections = document.querySelectorAll('section');
    
    window.addEventListener('scroll', () => {
        let current = '';
        
        sections.forEach(section => {
            const sectionTop = section.offsetTop;
            const sectionHeight = section.clientHeight;
            
            if (pageYOffset >= (sectionTop - 200)) {
                current = section.getAttribute('id');
            }
        });
        
        navLinks.forEach(link => {
            link.classList.remove('active');
            if (link.getAttribute('href').substring(1) === current) {
                link.classList.add('active');
            }
        });
    });
    
    // Smooth scrolling for navigation links
    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            
            const targetId = this.getAttribute('href');
            const targetSection = document.querySelector(targetId);
            
            window.scrollTo({
                top: targetSection.offsetTop - 80,
                behavior: 'smooth'
            });
        });
    });
    
    // Service popup functionality
    const serviceItems = document.querySelectorAll('.service-item');
    const popupOverlay = document.getElementById('popup-overlay');
    const popup = document.getElementById('popup');
    const popupClose = document.getElementById('popup-close');
    const popupContent = document.getElementById('popup-content');
    
    // Service information
    const serviceInfo = {
        diagnostics: {
            title: 'Full Diagnostics',
            description: 'Our comprehensive diagnostic services include blood work, X-rays, ultrasounds, and more to ensure accurate diagnosis and effective treatment plans for your pets.',
            image: 's1.png',
            details: [
                'Complete blood count and chemistry panels',
                'Digital radiography for detailed imaging',
                'Ultrasound examinations',
                'Electrocardiograms for heart monitoring',
                'In-house laboratory for quick results'
            ]
        },
        call: {
            title: '00-24 Call Service',
            description: 'Our 24/7 emergency call service ensures that your pets receive immediate attention whenever they need it, day or night.',
            image: 's2.png',
            details: [
                'Round-the-clock emergency response',
                'Immediate phone consultations',
                'Urgent care appointments',
                'After-hours treatment options',
                'Emergency surgery capabilities'
            ]
        },
        awarded: {
            title: 'Awarded Service',
            description: 'Our veterinary practice has been recognized with multiple awards for excellence in pet care, customer service, and innovative treatment approaches.',
            image: 's3.png',
            details: [
                'Best Veterinary Practice 2024',
                'Excellence in Pet Care Award',
                'Top-rated customer satisfaction',
                'Innovative Treatment Recognition',
                'Community Service Award'
            ]
        },
        experts: {
            title: 'The Best Experts',
            description: 'Our team consists of highly qualified veterinarians and specialists who are experts in their fields, ensuring the best possible care for your beloved pets.',
            image: 's4.png',
            details: [
                'Board-certified veterinary specialists',
                'Continuous professional education',
                'Specialized training in various fields',
                'Years of hands-on experience',
                'Compassionate approach to pet care'
            ]
        }
    };
    
    // Open popup when service item is clicked
    serviceItems.forEach(item => {
        item.addEventListener('click', function() {
            const serviceType = this.getAttribute('data-service');
            const service = serviceInfo[serviceType];
            
            // Create popup content
            let content = `
                <h3>${service.title}</h3>
                <p>${service.description}</p>
                <img src="${service.image}" alt="${service.title}">
                <h4>Our ${service.title} includes:</h4>
                <ul>
            `;
            
            service.details.forEach(detail => {
                content += `<li>${detail}</li>`;
            });
            
          ;
            
            popupContent.innerHTML = content;
            
            // Show popup
            popupOverlay.classList.add('active');
        });
    });
    
    // Close popup when close button is clicked
    popupClose.addEventListener('click', function() {
        popupOverlay.classList.remove('active');
    });
    
    // Close popup when clicking outside the popup
    popupOverlay.addEventListener('click', function(e) {
        if (e.target === popupOverlay) {
            popupOverlay.classList.remove('active');
        }
    });
    
    // Close popup when ESC key is pressed
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && popupOverlay.classList.contains('active')) {
            popupOverlay.classList.remove('active');
        }
    });
    
    // Add event listener for CTA buttons
    document.querySelectorAll('.cta-button').forEach(button => {
        button.addEventListener('click', function() {
            alert('Thank you for your interest! This would redirect to a contact form in a real application.');
        });
    });
});



