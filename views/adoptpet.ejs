    text-decoration: none;
    font-weight: 600;
}

.view-profile:hover {
    color: #8b4513;
    border-color: #8b4513;
}

/* Modal Styles - Exactly matching the second screenshot */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
