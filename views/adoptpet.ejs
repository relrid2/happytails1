    max-width: 400px;
    border-radius: 15px;
    position: relative;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    overflow: hidden;
}

.close-button {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 24px;
