    <script>

document.addEventListener('DOMContentLoaded', function() {
    // Pet data
    const adoptionInfoContainer = document.querySelector('.adoption-info-container');
    const vetInfoContainer = document.querySelector('.vet-info-container');

    let pets2 =  [];

    fetch("/getpets", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
    },
  })
    .then((res) => res.json())
    .then((data) => {
      pets2 = data.pets;

      fetch("/receivedpetforms", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
      })
      .then((res) => res.json())
      .then((data) => {
        // Handle the received pet forms data
        console.log("Received pet forms data:", data);
        const allForms = data.forms;
        allForms.forEach((item) => {
            const pet = pets2.find((pet) => pet._id === item.petId);

            const petName = pet ? pet.petName : "Unknown Pet";
            const username = item.userName || "Unknown User";
            const email = item.userEmail || "Unknown Email";
            const phone = item.userPhone || "Unknown Phone";

            const section = document.createElement("section");
            section.classList.add("adoption-info-card");
            section.innerHTML = `
                <div class="info-content">
                    <div><strong>Pet Name:</strong> ${petName}</div>
                    <div><strong>Username:</strong> ${username}</div>
                    <div><strong>Email:</strong> ${email}</div>
                    <div><strong>Phone:</strong> ${phone}</div>
                </div>
            `;
            adoptionInfoContainer.appendChild(section);

            fetch("/receivedvetforms", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
            })
            .then((res) => res.json())
            .then((data)=>{
                console.log(data.forms);

                const allForms = data.forms;

                allForms.forEach((item)=>{
                    const div2 = document.createElement("div");
                div2.classList.add("vet-card");
                div2.innerHTML = `
                    <p><strong>Vet Doctor:</strong> ${item.vetName}</p>
                    <p><strong>Pet Name:</strong> ${item.petName}</p>
                    <p><strong>Reason:</strong> ${item.reasondesc}</p>
                    <p><strong>Visit Date:</strong> ${new Date(item.visitDate).toLocaleDateString()}</p>

                    <hr>
                    <p><strong>Phone:</strong> ${item.phone}</p>
                    
                `;
                vetInfoContainer.appendChild(div2);
                })
            })
        })
        // Additional logic to display or process the form data can be added here
    });
      console.log("Successfully fetched pets", pets2);
    });

});


    </script>
