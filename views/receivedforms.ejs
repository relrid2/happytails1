<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body {
    background-color: #f2e0cb;
    min-height: 100vh;
}

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #f2e0cb ;
    color: black;;
   
    
}

.logo h1 {
    font-size: 2 rem;
    font-weight: 700;
    display: flex;
    align-items: center;
    font-family: 'Chewy', cursive;
    color:white;
}

.logo i {
    margin-left: 8px;
}

nav ul {
    display: flex;
    list-style: none;
}

nav ul li {
    margin-left: 1.5rem;
}

nav ul li a {
    text-decoration: none;
    color: white;
    font-weight: 500;
    transition: color 0.3s;
    color: black;;
}

nav ul li a:hover {
    color:#333;
}

.highlighted {
    color: #2b3334c0;
    font-weight: 600;
}

.search-container {
    max-width: 600px;
    margin: 2rem auto;
    display: flex;
    position: relative;
}

.search-input {
    width: 100%;
    padding: 12px 20px;
    border: 2px solid #ccc;
    border-radius: 30px;
    font-size: 1rem;
    outline: none;
    background-color: rgba(255, 255, 255, 0.8);
}

.search-button {
    position: absolute;
    right: 5px;
    top: 5px;
    background-color: #d2a679;
    border: none;
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
}

.pet-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 0 2rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.pet-card {
    background-color: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem;
}

.pet-card:hover {
    transform: translateY(-5px);
}

.pet-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: 10px;
    font-family: "DynaPuff", system-ui;
}

.pet-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.pet-card h2 {
    font-family: "DynaPuff", system-ui;
    margin: 1rem 0;
    font-size: 1.8rem;
    color: #333;
    text-align: center;
}

.view-profile {
    color: #000;
    font-family: "DynaPuff", system-ui;
    text-decoration: none;
    font-weight: 600;
}

.view-profile:hover {
    color: #8b4513;
    border-color: #8b4513;
}

/* Modal Styles - Exactly matching the second screenshot */
.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    align-items: center;
    justify-content: center;
}

.modal-content {
    background-color: #f2e0cb;
    width: 90%;
    max-width: 400px;
    border-radius: 15px;
    position: relative;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    overflow: hidden;
}

.close-button {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 24px;
    cursor: pointer;
    color: #000;
    z-index: 10;
    background-color: white;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
}

.pet-profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 0 20px 0;
    font-family: "DynaPuff", system-ui;
}

.pet-profile-image {
    width: 100%;
    height: 220px;
    overflow: hidden;
    margin-bottom: 15px;
    font-family: "DynaPuff", system-ui;
}

.pet-profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    font-family: "DynaPuff", system-ui;
}

.pet-name {
    font-family: "DynaPuff", system-ui;
    font-size: 2rem;
    color: #8b4513;
    margin-bottom: 10px;
    text-align: center;
}

.pet-details {
    width: 100%;
    text-align: center;
    margin-bottom: 20px;
}

.pet-color {
    font-size: 1.1rem;
    color: #555;
    margin-bottom: 5px;
}

.buttonclass{
    padding: 8px 16px;
    border-radius: 10px;
    background-color: #ebc6a1;
}

.pet-location {
    font-size: 1.1rem;
    color: #555;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
}

.pet-stats {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin: 20px 0;
}

.stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px;
    font-family: "DynaPuff", system-ui;
}

.stat i {
    font-size: 1.5rem;
    color: #888;
}

.stat p {
    font-size: 1.1rem;
    font-weight: 500;
    
}

.adopt-button {
    background-color: #f2e0cb;
    color: #8b4513;
    border: 2px solid #8b4513;
    padding: 12px 30px;
    padding-left: 100px;
    border-radius: 30px;
    font-size: 1.2rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    margin-top: 10px;
    width: 80%;
}

.adopt-button:hover {
    background-color: #8b4513;
    color: white;
}

/* Footer */
footer {
    background-color: #333;
    color: white;
    padding: 3rem 5% 1rem;
}

.footer-content {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 2rem;
    margin-bottom: 2rem;
}

.footer-logo h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    font-family: chewy,italics;
}

.footer-logo p {
    color: #ccc;
}

.footer-links h3,
.footer-contact h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    position: relative;
}

.footer-links h3::after,
.footer-contact h3::after {
    content: '';
    position: absolute;
    width: 50px;
    height: 2px;
    background-color: #4ECDC4;
    bottom: -5px;
    left: 0;
}

.footer-links ul li {
    margin-bottom: 0.5rem;
}

.footer-links ul li a {
    color: #ccc;
    transition: color 0.3s;
}

.footer-links ul li a:hover {
    color: #4ECDC4;
}

.footer-contact p {
    color: #ccc;
    margin-bottom: 0.5rem;
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

@media (max-width: 768px) {
    header {
        flex-direction: column;
        padding: 1rem;
    }
    
    nav ul {
        margin-top: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }
    
    nav ul li {
        margin: 0.5rem;
    }
    
    .pet-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
