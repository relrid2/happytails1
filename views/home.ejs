    transition: color 0.3s;
}

.footer-links ul li a:hover {
    color: #4ECDC4;
}

.footer-contact p {
    color: #ccc;
    margin-bottom: 0.5rem;
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

    </style>
